    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++.exe - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            // "program": "D:\\c++ file\\cpp_basics\\output\\${fileBasenameNoExtension}.exe", // D:\c++ file\cpp_basics\.gitignore
            // This is for output > oop_concept folder.
            "program": "D:\\c++ file\\cpp_basics\\output\\oop_output\\${fileBasenameNoExtension}.exe", // D:\c++ file\cpp_basics\.gitignore
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true, // Default false.
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe build active file"
        }
    ]
}